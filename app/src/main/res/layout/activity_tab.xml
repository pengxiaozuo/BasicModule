<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.peng.basic.widget.tab.TabView
            android:id="@+id/tab6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            app:basic_tab_icon="@drawable/nav_cart"
            app:basic_tab_icon_size="30dp"
            app:basic_tab_type="icon_only" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.peng.basic.widget.tab.TabView
            android:id="@+id/tab7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:basic_tab_active_color="@color/colorAccent"
            app:basic_tab_active_icon="@drawable/nav_browse_selected"
            app:basic_tab_icon="@drawable/nav_browse"
            app:basic_tab_icon_size="35dp"
            app:basic_tab_badge_max_count="9"
            app:basic_tab_title="Home"
            app:basic_tab_title_text_size="10dp"
            app:basic_tab_type="icon_and_title" />

        <com.peng.basic.widget.tab.TabView
            android:id="@+id/tab5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:basic_tab_active_color="@color/colorAccent"
            app:basic_tab_active_icon="@drawable/nav_browse_selected"
            app:basic_tab_icon="@drawable/nav_browse"
            app:basic_tab_icon_scale="1"
            app:basic_tab_layout="@layout/layout_tab"
            app:basic_tab_title="Home"
            app:basic_tab_title_scale="1"
            app:basic_tab_type="icon_and_title" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#89FFFF"
        android:orientation="horizontal">

        <com.peng.basic.widget.tab.TabView
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            app:basic_tab_active_bg_color="#00FF00"
            app:basic_tab_active_color="@color/colorAccent"
            app:basic_tab_active_icon="@drawable/nav_browse_selected"
            app:basic_tab_icon="@drawable/nav_browse"
            app:basic_tab_icon_size="35dp"
            app:basic_tab_title="Home"
            app:basic_tab_title_text_size="10dp"
            app:basic_tab_type="icon_and_title" />

        <com.peng.basic.widget.tab.TabView
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:basic_tab_active_color="@color/colorAccent"
            app:basic_tab_active_icon="@drawable/nav_browse_selected"
            app:basic_tab_badge_hide_when_active="true"
            app:basic_tab_icon="@drawable/nav_browse"
            app:basic_tab_icon_size="35dp"
            app:basic_tab_title="Home"
            app:basic_tab_title_text_size="10dp"
            app:basic_tab_type="icon_and_title" />

        <com.peng.basic.widget.tab.TabView
            android:id="@+id/tab3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:basic_tab_active_color="@color/colorAccent"
            app:basic_tab_active_icon="@drawable/nav_browse_selected"
            app:basic_tab_badge_hide_when_active="true"
            app:basic_tab_icon="@drawable/nav_browse"
            app:basic_tab_icon_size="45dp"
            app:basic_tab_title="Home"
            app:basic_tab_title_text_size="10dp"
            app:basic_tab_type="icon_only" />

        <com.peng.basic.widget.tab.TabView
            android:id="@+id/tab4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:basic_tab_active_color="@color/colorAccent"
            app:basic_tab_active_icon="@drawable/nav_browse_selected"
            app:basic_tab_badge_hide_when_active="true"
            app:basic_tab_icon="@drawable/nav_browse"
            app:basic_tab_icon_size="35dp"
            app:basic_tab_title="Home"
            app:basic_tab_title_text_size="20dp"
            app:basic_tab_type="title_only" />


    </LinearLayout>
</LinearLayout>