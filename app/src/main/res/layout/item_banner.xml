<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.peng.basic.widget.banner.BannerView
        android:id="@+id/banner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:banner_auto_play="true"
        app:banner_loop="true"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.peng.basic.widget.banner.DefaultBannerIndicator
            android:id="@+id/basic_banner_indicator"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|center"
            app:banner_indicator_shape="oval"
            app:banner_indicator_border_width="2dp"
            app:banner_indicator_width="8dp"
            app:banner_indicator_height="8dp"
            app:banner_indicator_margin="10dp"
            app:banner_indicator_border_select_color="@color/colorAccent"
            app:banner_indicator_border_color="@color/colorPrimary"
            app:banner_indicator_color="#00000000"
            app:banner_indicator_select_color="#00000000"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>
    </com.peng.basic.widget.banner.BannerView>

</android.support.constraint.ConstraintLayout>