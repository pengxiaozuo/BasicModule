<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BannerView">
        <attr name="banner_auto_play" format="boolean"/>
        <attr name="banner_loop" format="boolean"/>
        <attr name="banner_period" format="integer"/>
    </declare-styleable>

    <declare-styleable name="DefaultBannerIndicator">
        <attr name="banner_indicator_margin" format="dimension"/>
        <attr name="banner_indicator_width" format="dimension"/>
        <attr name="banner_indicator_height" format="dimension"/>
        <attr name="banner_indicator_corner_radius" format="dimension"/>
        <attr name="banner_indicator_border_width" format="dimension"/>
        <attr name="banner_indicator_border_color" format="color"/>
        <attr name="banner_indicator_border_select_color" format="color"/>
        <attr name="banner_indicator_color" format="color"/>
        <attr name="banner_indicator_select_color" format="color"/>
        <attr name="banner_indicator_shape" format="enum">
            <enum name="rectangle" value="0"/>
            <enum name="oval" value="1"/>
        </attr>
    </declare-styleable>
</resources>